<div id = 'sidebar'>
    <%= render 'settings_sidebar'%>
</div>

<div id="settings">
    <div id = 'settings_header'>
        <%= render 'settings_header'%>
    </div>
</div>

<% if @user.avatar.attached? %>
    <div id="avatar_settings">
        <image id="avatar_image" src="<%=(url_for(@user.avatar))%>">
    </div>
<% end %>

<div id="verification_upload">
    <%= form_with(model: @user, local: true) do |form| %>
        <% if @user.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

            <ul>
            <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
            </ul>
        </div>
        <% end %>
        <div class="field">
            <%= form.label :avatar %>
            <%= form.file_field :avatar, :required => true %>
        </div>

        <div class="actions">
            <%= form.submit %>
            </div>
    <% end %>
</div>
<h1> Sign Up </h1>

<%=form_for(@user, url: users_path) do |f| %>
    <div>
      <%= render 'shared/error_messages', object: @user%>
    </div>

    <div>
      <%= f.label :user_name %>
      <%= f.text_field :user_name, :required => true, class:'form-control' %>
    </div>

    <div>
      <%= f.label :email %>
      <%= f.text_field :email, :required => true, class:'form-control' %>
    </div>

    <div>
      <%= f.label :phone_number %>
      <%= f.text_field :phone_number, :required => true, class:'form-control' %>
    </div>

    <div>
      <%= f.label :password %>
      <%= f.password_field :password, :required => true, class:'form-control' %>
    </div>

    <div>
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, :required => true, class:'form-control' %>
    </div>

    <div>
      <%= f.label :area %>
      <%= f.text_field :area, :required => true, class:'form-control' %>
    </div>
  
    <%=f.submit "Signup" %>
  
<% end %>
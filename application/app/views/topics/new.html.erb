<h1>New Topic</h1>

<%=form_for(@topic, url: topics_path) do |f| %>
    <div>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <br/>
    <div>
      <%= f.label :description %>
      <textarea name="topic[description]"  cols="80" rows="20"><%= @topic.description %></textarea>
    </div>
  
    <%=f.submit "Create Topic" %>
  
<% end %>

<%= link_to 'Back', topics_path %>
